{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "prisma/**", "client/**", "client-admin/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/dist/admin/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "dist/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "installCommand": "npm ci --legacy-peer-deps",
  "buildCommand": "npm run build"
}