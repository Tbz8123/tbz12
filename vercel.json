{
  "version": 2,

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/admin/assets/(.*)",
      "dest": "/dist/admin/assets/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/dist/admin/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "rm -rf package-lock.json node_modules && npm install --legacy-peer-deps",
  "buildCommand": "npm run build"
}