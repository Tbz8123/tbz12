{
  "version": 2,
  "functions": {
    "dist/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/dist/admin/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "rm -rf package-lock.json node_modules && npm install --legacy-peer-deps",
  "buildCommand": "npm run build"
}