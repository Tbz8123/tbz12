{
  "version": 2,

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/admin/assets/(.*)",
      "dest": "/admin/assets/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "rm -rf package-lock.json node_modules && npm install --legacy-peer-deps",
  "buildCommand": "npm run build"
}