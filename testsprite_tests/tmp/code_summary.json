{
  "project_name": "TbzResumeBuilderV4",
  "project_type": "Full-Stack Web Application",
  "description": "A comprehensive web-based resume building platform that enables users to create, customize, and manage professional resumes with multiple templates, admin panel, and analytics.",
  "tech_stack": {
    "frontend": {
      "framework": "React 18+",
      "language": "TypeScript",
      "build_tool": "Vite",
      "styling": "Tailwind CSS",
      "routing": "React Router DOM",
      "state_management": "Zustand",
      "ui_components": "Radix UI",
      "animations": "Framer Motion",
      "forms": "React Hook Form",
      "data_fetching": "TanStack React Query"
    },
    "backend": {
      "runtime": "Node.js",
      "framework": "Express.js",
      "language": "TypeScript",
      "database": "PostgreSQL",
      "orm": "Prisma",
      "authentication": "JWT + Firebase Auth",
      "session_management": "Express Session",
      "validation": "Zod"
    },
    "database": {
      "primary": "PostgreSQL",
      "orm": "Prisma",
      "migrations": "Prisma Migrate"
    },
    "deployment": {
      "build_tool": "ESBuild",
      "package_manager": "npm",
      "environment": "Cross-platform (Windows/Linux/Mac)"
    }
  },
  "architecture": {
    "type": "Monorepo with Multiple Applications",
    "applications": [
      {
        "name": "Main Client",
        "path": "./client",
        "port": 5000,
        "description": "User-facing resume builder application"
      },
      {
        "name": "Admin Client",
        "path": "./client-admin",
        "description": "Administrative dashboard for platform management"
      },
      {
        "name": "Backend Server",
        "path": "./server",
        "port": 5174,
        "description": "RESTful API server with database integration"
      }
    ],
    "database_models": [
      "User", "UserProfile", "Subscription", "UsageStats", "UserPermission",
      "UserTemplate", "Notification", "SupportTicket", "Resume", "Download",
      "ResumeTemplate", "ProTemplate", "Template", "JobTitle", "JobDescription",
      "SkillsJobTitle", "SkillCategory", "ProfessionalSummaryJobTitle",
      "ProfessionalSummary", "ImportHistory", "VisitorAnalytics", "SessionAnalytics",
      "GeographicAnalytics", "TemplateAnalytics", "AnalyticsSummary"
    ]
  },
  "key_features": [
    {
      "category": "User Management",
      "features": [
        "User registration and authentication",
        "Firebase OAuth integration",
        "User profiles and preferences",
        "Subscription management (FREE/PRO tiers)",
        "Usage tracking and limits"
      ]
    },
    {
      "category": "Resume Builder",
      "features": [
        "Step-by-step resume creation wizard",
        "Real-time preview with live updates",
        "Drag-and-drop section reordering",
        "Auto-save functionality",
        "Multiple export formats (PDF, DOCX)"
      ]
    },
    {
      "category": "Template System",
      "features": [
        "Multiple professionally designed templates",
        "Template categorization (Snap/Pro)",
        "Template customization and theming",
        "3D enhanced thumbnails",
        "Template analytics and usage tracking"
      ]
    },
    {
      "category": "Content Management",
      "features": [
        "Job titles and descriptions database",
        "Skills categorization system",
        "Professional summary templates",
        "Import/export functionality",
        "Bulk data management"
      ]
    },
    {
      "category": "Analytics & Monitoring",
      "features": [
        "Visitor tracking and analytics",
        "Session monitoring",
        "Geographic analytics",
        "Template usage statistics",
        "Real-time dashboard metrics"
      ]
    },
    {
      "category": "Administrative",
      "features": [
        "Admin dashboard with comprehensive metrics",
        "User management and oversight",
        "Template management system",
        "Support ticket system",
        "System health monitoring"
      ]
    }
  ],
  "api_structure": {
    "base_url": "/api",
    "endpoints": [
      "/auth/*", "/users/*", "/resumes/*", "/templates/*",
      "/analytics/*", "/admin/*", "/job-titles/*", "/skills/*",
      "/professional-summaries/*", "/import-history/*", "/downloads/*"
    ]
  },
  "security_features": [
    "JWT token-based authentication",
    "Firebase authentication integration",
    "Role-based access control (USER/ADMIN)",
    "Input validation with Zod schemas",
    "CORS protection",
    "Session management with secure cookies",
    "Password hashing and encryption"
  ],
  "performance_optimizations": [
    "Vite for fast development builds",
    "Code splitting and lazy loading",
    "Database indexing on key fields",
    "Caching strategies for templates",
    "Optimized image handling for thumbnails",
    "Memory-based analytics for real-time data"
  ],
  "development_workflow": {
    "scripts": {
      "dev": "Development server for backend",
      "dev:client": "Development server for main client",
      "dev:admin": "Development server for admin client",
      "build": "Production build for all applications",
      "prisma:generate": "Generate Prisma client",
      "prisma:migrate:dev": "Run database migrations"
    },
    "environment_variables": [
      "DATABASE_URL", "JWT_SECRET", "FIREBASE_CONFIG",
      "NODE_ENV", "PORT", "SESSION_SECRET"
    ]
  },
  "testing_considerations": {
    "frontend_testing": [
      "Component rendering and interactions",
      "Form validation and submission",
      "Navigation and routing",
      "Template selection and customization",
      "Real-time preview functionality",
      "Export and download features"
    ],
    "backend_testing": [
      "API endpoint functionality",
      "Authentication and authorization",
      "Database operations (CRUD)",
      "File upload and processing",
      "Analytics data collection",
      "Error handling and validation"
    ],
    "integration_testing": [
      "End-to-end resume creation workflow",
      "User registration and login flow",
      "Template application and export",
      "Admin dashboard functionality",
      "Analytics tracking accuracy"
    ]
  },
  "deployment_info": {
    "ports": {
      "backend": 5174,
      "client": 5000,
      "admin": "Dynamic (Vite dev server)"
    },
    "build_outputs": {
      "backend": "./dist",
      "client": "./client/dist",
      "admin": "./client-admin/dist"
    }
  }
}