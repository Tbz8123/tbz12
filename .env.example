# AWS Deployment Environment Variables

# Port Configuration (AWS will set PORT automatically)
PORT=3000
API_PORT=3000

# Node Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Development Only (not needed in AWS production)
VITE_HMR_HOST=0.0.0.0
VITE_HMR_PORT=3000

# PostgreSQL Database Details (if using separate variables)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=tbzresumebuilder

# Google Analytics (optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Configuration (if using)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Security
CORS_ORIGIN=https://your-domain.com

# AWS Specific (if needed)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key